{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "sonarqube-companion-frontend": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "aot": true,
            "showCircularDependencies": false,
            "assets": [
              "src/assets",
              "src/amcharts",
              "src/favicon.ico"
            ],
            "index": "src/index.html",
            "outputPath": "target/webapp",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.app.json",
            "styles": [
              "src/styles.scss"
            ],
            "scripts": [
              "node_modules/amcharts3/amcharts/amcharts.js",
              "node_modules/amcharts3/amcharts/lang/pl.js",
              "node_modules/amcharts3/amcharts/serial.js"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "sonarqube-companion-frontend:build",
            "port": 4000,
            "host": "0.0.0.0"
          },
          "configurations": {
            "production": {
              "browserTarget": "sonarqube-companion-frontend:build:production"
            }
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "./protractor.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "exclude": []
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "karmaConfig": "karma.conf.js"
          }
        }
      }
    }
  },
  "defaultProject": "sonarqube-companion-frontend",
  "schematics": {
    "@schematics/angular:component": {
      "inlineTemplate": true,
      "skipTests": true,
      "prefix": "sq",
      "style": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "sq"
    }
  }
}
